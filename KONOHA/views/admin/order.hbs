{{> menu}}
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"
          integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
        <link rel='stylesheet' href='/stylesheets/style.css'/>
<div class="col-lg-9">
    <form method="post" class="form-horizontal" id="insert_form" action="/admin/order/view/update" enctype="multipart/form-data" data-toggle="validator">
    <div class="col-lg-12">
        <h2>View Order</h2>
    </div>
    <div class="order-layout col-md-12">
        <div class="row">
            <div class="col-md-12 bottom-pad-20">
                <button id="frm_edit_product_save" class="btn btn-success" type="submit" >Update Status</i></button>
            </div>
        </div>
        <ul class="list-group">
            <li class="list-group-item list-group-input-pad">
                <strong> Order status: </strong><span class="text-{{order.status}} pull-right">{{order.status}}</span>
                <div class="pull-right col-md-2">
                    <select class="form-control input-sm" id="orderStatus" name="order_status">
                        
                            <option name="complete" value="Completed">Completed</option>
                            <option value="Pending">Pending</option>
                            <option value="Cancelled">Cancelled</option>
                            <option value="Declined">Declined</option>
                            <option value="Shipped">Shipped</option>
    
                    </select>
                </div>
            </li>
            <li class="list-group-item"><strong> Order date: </strong><span class="pull-right">{{formatDate order.date "DD/MM/YYYY hh:mmA"}}</span></li>
            <li class="list-group-item"><strong> Order ID: </strong><span class="pull-right">{{order._id}}</span></li>
            <li class="list-group-item"><strong> PaymentId: </strong><span class="pull-right">{{order.paymentId}}</span></li>
            <li class="list-group-item"><strong> Order total amount: </strong><span class="pull-right">{{order.cart.totalPrice}}$</span></li>
            <li class="list-group-item"><strong> Name: </strong><span class="pull-right">{{order.name}}</span></li>
            <li class="list-group-item"><strong> Address: </strong><span class="pull-right">{{order.address}}</span></li>
            <li class="list-group-item"><strong> Phone number: </strong><span class="pull-right">{{order.telephone}}</span></li>
            <li class="list-group-item">&nbsp;</li>
            <li class="list-group-item"><strong class="text-info">Products ordered</strong></li>
            {{#each order.cart.items}}
                <li class="list-group-item">
                    {{this.qty}} x {{this.item.title}}
                    <div class="pull-right">{{this.price}}$</div>
                </li>
            {{/each}}
        </ul>
        <input type="hidden" id="order_id" value="{{order._id}}" name="order_id">
    </div>
    </form>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.2/summernote.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.2/summernote.css" rel="stylesheet">
<script>
    $(document).ready(function() {
        $('#editor').summernote({
            height: 300,
            minHeight: null
        });
    });
</script>